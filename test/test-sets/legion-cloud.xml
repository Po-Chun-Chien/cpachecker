<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.0//EN" "http://www.sosy-lab.org/benchexec/benchmark-1.0.dtd">
<benchmark tool="cpachecker" timelimit="180 s" hardtimelimit="200 s" memlimit="8 GB" cpuCores="2">

  <option name="-heap">1024M</option>
  <option name="-stack">32M</option>
  <option name="-config">config/legion.properties</option>
  <option name="-benchmark"/>
  <option name="-timelimit">160</option>

  <rundefinition name="legion"></rundefinition>
  <resultfiles>**.xml*</resultfiles>
  <resultfiles>output/Statistics.txt</resultfiles>


  <tasks name="ReachSafety-Bitvector">
    <includesfile>/mnt/benchmarks/ReachSafety-BitVectors.set</includesfile>
    <propertyfile>/mnt/benchmarks/properties/unreach-call.prp</propertyfile>
  </tasks>

</benchmark>
