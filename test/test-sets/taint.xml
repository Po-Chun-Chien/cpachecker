<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.18//EN" "https://www.sosy-lab.org/benchexec/benchmark-1.18.dtd">
<!--
  Example file that demonstrates the use of CPAchecker.
  This file can and should be used as a base for building own benchmark definitions.
-->
<benchmark tool="cpachecker" timelimit="900 s" hardtimelimit="960 s" memlimit="15 GB" cpuCores="8">
  <option name="-heap">10000M</option>
  <rundefinition>
    <option name="-preprocess" />
    <option name="-taintAnalysis"/>
  </rundefinition>
  <propertyfile>../config/properties/taint-error.prp</propertyfile>

  <tasks name="TDD">
    <include>../programs/taint/tests/*.yml</include>
  </tasks>
  <tasks name="SARD 100">
    <include>../programs/taint/nist/100/*.yml</include>
  </tasks>
  <tasks name="SARD 101">
    <include>../programs/taint/nist/101/*.yml</include>
  </tasks>

  <rundefinition name="Taint and VAjoin">
    <option name="-taintAnalysis-join"/>
    <option name="-preprocess" />
  </rundefinition>
  <rundefinition name="Taint and Pred">
    <option name="-taintAnalysis-pred"/>
    <option name="-preprocess" />
  </rundefinition>
</benchmark>
